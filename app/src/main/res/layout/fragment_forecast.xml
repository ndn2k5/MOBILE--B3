            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@android:color/white"
            android:padding="8dp">

            <TextView
                android:id="@+id/date_sat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
