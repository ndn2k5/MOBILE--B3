<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#e0dcfc"
        android:padding="8dp">

        <!-- Monday -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@android:color/white"
            android:padding="8dp">

            <TextView
                android:id="@+id/date_mon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Mon"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/weather_icon_mon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:contentDescription="Partly Cloudy"
                android:src="@drawable/partly_cloudy_day" />

            <TextView
                android:id="@+id/status_mon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:text="Partly Cloudy"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/temp_mon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/status_mon"
                android:layout_alignParentEnd="true"
                android:text="24C - 31C"
                android:textSize="14sp" />
        </RelativeLayout>

        <!-- Tuesday -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@android:color/white"
            android:padding="8dp">

            <TextView
                android:id="@+id/date_tue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Tue"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/weather_icon_tue"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:contentDescription="Showers"
                android:src="@drawable/showers_rain" />

            <TextView
                android:id="@+id/status_tue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:text="Showers"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/temp_tue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/status_tue"
                android:layout_alignParentEnd="true"
                android:text="24C - 30C"
                android:textSize="14sp" />
        </RelativeLayout>

        <!-- Wednesday -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@android:color/white"
            android:padding="8dp">

            <TextView
                android:id="@+id/date_wed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="Wed"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/weather_icon_wed"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:contentDescription="Rain"
                android:src="@drawable/rain_with_cloudy_dark" />

            <TextView
                android:id="@+id/status_wed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:text="Rain"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/temp_wed"
